@model OrderModel
@using (Html.BeginForm("_ChonVeRefund", "Order", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)

    <div class="section-header">

        <div class="options">
            <input type="submit" id="btnHoanTat" class="k-button" value="@T("Nop.Web.PhuTrachChuyen.HoanTat")" />
        </div>
    </div>
    <table>
      
        @for (int i = 0; i < Model.PhoiVes.Count(); i++)
        {
            <tr>
                <td>

                    @Html.CheckBoxFor(model => model.PhoiVes[i].IsRefund)
                    @Html.DisplayFor(model => model.PhoiVes[i].KyHieuGhe) (Tầng @Html.DisplayFor(model => model.PhoiVes[i].Tang))
                    @Html.HiddenFor(model => model.PhoiVes[i].NguonVeXeId)
                    @Html.HiddenFor(model => model.PhoiVes[i].Id)
                </td>
            </tr>
        }
    </table>
}







