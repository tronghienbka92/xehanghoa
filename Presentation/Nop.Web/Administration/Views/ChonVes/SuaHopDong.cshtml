@model HopDongModel
@using Nop.Admin.Models.ChonVes
@{
    //page title
    ViewBag.Title = T("Admin.ChonVe.HopDong.ChiTiet").Text;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "hopdong-form" }))
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-dashboard.png")" alt="" />
            @T("Admin.ChonVe.HopDong.ChiTiet") - @Model.MaHopDong @Html.ActionLink("(" + T("Admin.ChonVe.HopDong.BackToList") + ")", "ListHopDong")
        </div>
        <div class="options">
            <input type="submit" name="save" class="k-button" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="k-button" value="@T("Admin.Common.SaveContinue")" />
            <span id="hopdong-delete" class="k-button">@T("Admin.Common.Delete")</span>
        </div>
    </div>
    @Html.Partial("ChinhSuaHopDong", Model)
}
@Html.DeleteConfirmation("XoaHopDong", "hopdong-delete")
