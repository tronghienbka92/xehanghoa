@model Decimal
@Html.TextBoxFor(model => model)
<script>
    $(document).ready(function() {
        $("#@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)").kendoNumericTextBox({
            format: "#0.00",
            culture: "vi-VN",
            decimals: 4 //always display 4 digits
        });
    });
</script>
