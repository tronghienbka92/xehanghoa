    </li>
</ul>
<ul id="menucontextphoive_nghiepvu_YeuCauHuy">
    <li actionid="2">
        @T("chonve.nhaxes.qualyphoive.menu_thanhtoan").Text
    </li>
    <li actionid="3">
        @T("chonve.nhaxes.qualyphoive.menu_chuyen").Text
    </li>
    <li actionid="5">
        In vé
    </li>
    <li class="k-separator"></li>
    <li actionid="7">


        @T("Yêu cầu hủy").Text

