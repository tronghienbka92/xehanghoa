    <li class="k-separator"></li>
    <li actionid="1">
        Đặt mua
    </li>
    <li data_changid="0">
        Đặt vé nhanh
        <ul id="menucontextphoive_datmuavenhanh"></ul>
    </li>
    <li class="k-separator"></li>
</ul>
<ul id="menucontextphoive_nghiepvu">
    <li actionid="2">
        @T("chonve.nhaxes.qualyphoive.menu_thanhtoan").Text
