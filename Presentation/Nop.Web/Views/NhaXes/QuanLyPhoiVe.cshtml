    <li actionid="3">
        @T("chonve.nhaxes.qualyphoive.menu_chuyen").Text
    </li>
    <li actionid="5">
        In vé
    </li>
    <li class="k-separator"></li>
    <li actionid="4">


        @T("chonve.nhaxes.qualyphoive.menu_huy").Text

    </li>
    <li actionid="8">


