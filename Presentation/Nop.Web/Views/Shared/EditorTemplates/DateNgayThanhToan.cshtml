@using System.Globalization
@model DateTime?
<input id="@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)" name="@ViewData.TemplateInfo.GetFullHtmlFieldName(string.Empty)" value="@(Model < DateTime.MaxValue || Model.HasValue ? Model.Value.ToShortDateString() : null)" />
<script>
    $(document).ready(function () {

        var today = new Date();
       
        $("#@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)").kendoDatePicker({
            format: "@(CultureInfo.CurrentCulture.DateTimeFormat.ShortDatePattern)",
           
            max: today,
            month: {
                empty: '<span style="color:\\#ccc;padding:0 .45em 0 .1em;">#= data.value #</span>'
            }
        });
        

    });
</script>